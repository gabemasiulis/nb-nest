<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav">
    {{breadcrumbs}}
    {{search submit=false instant=true class='search search-full'}}
  </nav>

  <div class="category-container">
    <div class="category-nav">
      {{#isnt settings.nav_text_1 ' '}}
        <a href="{{settings.nav_url_1}}">{{settings.nav_text_1}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_2 ' '}}
        <a href="{{settings.nav_url_2}}">{{settings.nav_text_2}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_3 ' '}}
        <a href="{{settings.nav_url_3}}">{{settings.nav_text_3}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_4 ' '}}
        <a href="{{settings.nav_url_4}}">{{settings.nav_text_4}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_5 ' '}}
        <a href="{{settings.nav_url_5}}">{{settings.nav_text_5}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_6 ' '}}
        <a href="{{settings.nav_url_6}}">{{settings.nav_text_6}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_7 ' '}}
        <a href="{{settings.nav_url_7}}">{{settings.nav_text_7}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_8 ' '}}
        <a href="{{settings.nav_url_8}}">{{settings.nav_text_8}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_9 ' '}}
        <a href="{{settings.nav_url_9}}">{{settings.nav_text_9}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_10 ' '}}
        <a href="{{settings.nav_url_10}}">{{settings.nav_text_10}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_11 ' '}}
        <a href="{{settings.nav_url_11}}">{{settings.nav_text_11}}</a><br>
      {{/isnt}}
      {{#isnt settings.nav_text_12 ' '}}
        <a href="{{settings.nav_url_12}}">{{settings.nav_text_12}}</a><br>
      {{/isnt}}
    </div>
    <div class="category-content">
      <header class="page-header">
        <h1>{{category.name}}</h1>
        {{#if category.description}}
          <p class="page-header-description">{{category.description}}</p>
        {{/if}}
      </header>

      <div class="section-tree">
        {{#each sections}}
          <section class="section">
            <h3 class="section-tree-title">
              <a href="{{url}}">{{name}}</a>
              {{#if internal}}
                <span class="icon-lock" title="{{t 'internal'}}"></span>
              {{/if}}
            </h3>
            {{#if articles}}
              <ul class="article-list">
                {{#each articles}}
                  <li class="article-list-item{{#if promoted}} article-promoted{{/if}}">
                    {{#if promoted}}
                      <span data-title="{{t 'promoted'}}" class="icon-star"></span>
                    {{/if}}
                    <a href="{{url}}" class="article-list-link">{{title}}</a>
                  </li>
                {{/each}}
              </ul>
              {{#if more_articles}}
                <a href="{{url}}" class="see-all-articles">
                  {{t 'show_all_articles' count=article_count}}
                </a>
              {{/if}}
            {{else}}
              <i class="section-empty">
                <a href="{{url}}">{{t 'empty'}}</a>
              </i>
            {{/if}}
          </section>
        {{else}}
          <i class="category-empty">
            <a href="{{category.url}}">{{t 'empty'}}</a>
          </i>
        {{/each}}
      </div>
    </div>
  </div>
</div>
